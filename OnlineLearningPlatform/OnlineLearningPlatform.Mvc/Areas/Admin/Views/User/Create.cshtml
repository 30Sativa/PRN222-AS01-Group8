@model OnlineLearningPlatform.Mvc.Models.Admin.CreateUserViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/Admin/user-edit.css" />
}

<div class="form-container">

    <h2>Tạo người dùng</h2>

    <form asp-action="Create" method="post">

        <div class="form-group">
            <label>Họ và tên</label>
            <input asp-for="FullName" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" />
        </div>

        <div class="form-group">
            <label>Mật khẩu</label>
            <input asp-for="Password" type="password" />
        </div>

        <div class="form-group">
            <label>Vai trò</label>
            <select asp-for="Role"
                    asp-items="@(new SelectList(Model.Roles))">
            </select>
        </div>

        <button type="submit" class="btn-save">Tạo</button>
        <a asp-action="Index">Hủy</a>

    </form>

</div>
