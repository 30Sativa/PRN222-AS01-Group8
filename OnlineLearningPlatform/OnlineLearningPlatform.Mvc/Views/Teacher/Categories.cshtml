@model List<OnlineLearningPlatform.Services.DTO.Response.CategoryDto>
@{
    ViewData["Title"] = "Quản lý danh mục khóa học";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-tags me-2"></i>Quản lý danh mục khóa học</h2>
        <a asp-action="CreateCategory" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Thêm danh mục
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">Chưa có danh mục nào</h4>
            <p>Bạn chưa tạo danh mục. Nhấn "Thêm danh mục" để tạo danh mục khóa học (ví dụ: Lập trình, Thiết kế, Ngoại ngữ...).</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Tên danh mục</th>
                            <th style="width: 180px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            var cat = Model[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@cat.CategoryName</td>
                                <td>
                                    <a asp-action="EditCategory" asp-route-id="@cat.CategoryId" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(cat.CategoryId)">
                                        <i class="bi bi-trash"></i> Xóa
                                    </button>
                                    <div class="modal fade" id="deleteModal@(cat.CategoryId)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Xác nhận xóa danh mục</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Bạn có chắc muốn xóa danh mục "<strong>@cat.CategoryName</strong>"? Danh mục đang được dùng bởi khóa học sẽ không thể xóa.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <form asp-action="DeleteCategory" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@cat.CategoryId" />
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Xóa</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left me-1"></i>Quay lại khóa học</a>
    </div>
</div>

@section Scripts {
    <script>
        setTimeout(function() { $('.alert').fadeOut('slow'); }, 5000);
    </script>
}
