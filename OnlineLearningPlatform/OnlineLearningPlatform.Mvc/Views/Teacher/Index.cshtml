@model OnlineLearningPlatform.Mvc.Models.Teacher.TeacherIndexViewModel
@using OnlineLearningPlatform.Models.Enums
@{
    ViewData["Title"] = "Quản lý khóa học";
    var statusFilter = (ViewData["StatusFilter"] as string)?.ToLowerInvariant() ?? "all";
    var hasPending = Model.PendingCourses != null && Model.PendingCourses.Any();
    var hasPublished = Model.PublishedCourses != null && Model.PublishedCourses.Any();
    var hasRejected = Model.RejectedCourses != null && Model.RejectedCourses.Any();
    var hasAny = hasPending || hasPublished || hasRejected;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Teacher/teacher-courses.css" />
}

<div class="teacher-courses-container">
    <div class="teacher-courses-header">
        <h2>Quản lý khóa học của tôi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo khóa học mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!hasAny)
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">Chưa có khóa học nào</h4>
            <p>Bạn chưa tạo khóa học nào. Hãy bắt đầu bằng cách nhấn nút "Tạo khóa học mới" bên trên.</p>
        </div>
    }
    else
    {
        <!-- Filter + Search -->
        <div class="mb-4">
            <form method="get" asp-action="Index" class="row g-2 align-items-end">
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label mb-1">Trạng thái</label>
                    <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                        <option value="all" selected="@(statusFilter == "all" ? "selected" : null)">Tất cả</option>
                        <option value="published" selected="@(statusFilter == "published" ? "selected" : null)">Đã duyệt / Đã xuất bản</option>
                        <option value="pending" selected="@(statusFilter == "pending" ? "selected" : null)">Chờ duyệt</option>
                        <option value="rejected" selected="@(statusFilter == "rejected" ? "selected" : null)">Bị từ chối</option>
                    </select>
                </div>
                <div class="col-12 col-md-8 col-lg-7">
                    <label class="form-label mb-1">Tìm kiếm</label>
                    <input type="text"
                           name="searchString"
                           value="@ViewData["CurrentFilter"]"
                           class="form-control"
                           placeholder="Tìm kiếm theo tên hoặc mô tả..."
                           aria-label="Tìm kiếm khóa học">
                </div>
                <div class="col-12 col-lg-2 d-grid">
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-funnel"></i> Lọc
                    </button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string) || statusFilter != "all")
            {
                <div class="mt-2">
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Đặt lại
                    </a>
                </div>
            }
        </div>

        @* Mặc định hiển thị "Đã xuất bản" trước *@
        @if (statusFilter == "all" || statusFilter == "published")
        {
            <div class="mt-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h4 class="text-success mb-0">
                        <i class="bi bi-check-circle"></i> Khóa đã xuất bản
                    </h4>
                    <span class="badge bg-success">@Model.PublishedCourses.Count khóa</span>
                </div>

                @if (!hasPublished)
                {
                    <div class="alert alert-light border">
                        Không có khóa học nào đã được duyệt/đã xuất bản.
                    </div>
                }
                else
                {
                    <div class="row">
                        @foreach (var course in Model.PublishedCourses)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                @await Html.PartialAsync("_CourseCard", course)
                            </div>
                        }
                    </div>
                }
            </div>
        }

        @if (statusFilter == "all" || statusFilter == "pending")
        {
            @if (hasPending)
            {
                <div class="mb-5 pb-4 border-bottom">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h4 class="text-warning mb-0">
                            <i class="bi bi-hourglass-split"></i> Khóa đang chờ duyệt
                        </h4>
                        <span class="badge bg-warning text-dark">@Model.PendingCourses.Count khóa</span>
                    </div>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-info-circle"></i> Các khóa học dưới đây đang chờ quản trị viên phê duyệt. Sau khi được duyệt, bạn sẽ có thể quản lý và xem học viên.
                    </p>
                    <div class="row">
                        @foreach (var course in Model.PendingCourses)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                @await Html.PartialAsync("_CourseCard", course)
                            </div>
                        }
                    </div>
                </div>
            }
            else if (statusFilter == "pending")
            {
                <div class="alert alert-light border">
                    Không có khóa học nào đang chờ duyệt.
                </div>
            }
        }

        @if (statusFilter == "all" || statusFilter == "rejected")
        {
            @if (hasRejected)
            {
                <div class="mb-5 pb-4 border-bottom">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h4 class="text-danger mb-0">
                            <i class="bi bi-x-circle"></i> Khóa bị từ chối
                        </h4>
                        <span class="badge bg-danger">@Model.RejectedCourses.Count khóa</span>
                    </div>
                    <p class="text-muted small mb-3">
                        <i class="bi bi-info-circle"></i> Các khóa học dưới đây đã bị quản trị viên từ chối. Bạn có thể xem lý do, chỉnh sửa nội dung và gửi lại sau.
                    </p>
                    <div class="row">
                        @foreach (var course in Model.RejectedCourses)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                @await Html.PartialAsync("_CourseCard", course)
                            </div>
                        }
                    </div>
                </div>
            }
            else if (statusFilter == "rejected")
            {
                <div class="alert alert-light border">
                    Không có khóa học nào bị từ chối.
                </div>
            }
        }
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
