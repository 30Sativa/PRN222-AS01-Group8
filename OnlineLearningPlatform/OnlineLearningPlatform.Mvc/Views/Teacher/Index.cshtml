@model OnlineLearningPlatform.Mvc.Models.Teacher.TeacherIndexViewModel
@using OnlineLearningPlatform.Models.Enums
@{
    ViewData["Title"] = "Quản lý khóa học";
    var hasPending = Model.PendingCourses != null && Model.PendingCourses.Any();
    var hasPublished = Model.PublishedCourses != null && Model.PublishedCourses.Any();
    var hasAny = hasPending || hasPublished;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Teacher/teacher-courses.css" />
}

<div class="teacher-courses-container">
    <div class="teacher-courses-header">
        <h2>Quản lý khóa học của tôi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo khóa học mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!hasAny)
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">Chưa có khóa học nào</h4>
            <p>Bạn chưa tạo khóa học nào. Hãy bắt đầu bằng cách nhấn nút "Tạo khóa học mới" bên trên.</p>
        </div>
    }
    else
    {
        @* Khóa đang chờ duyệt *@
        @if (hasPending)
        {
            <div class="mb-5 pb-4 border-bottom">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h4 class="text-warning mb-0">
                        <i class="bi bi-hourglass-split"></i> Khóa đang chờ duyệt
                    </h4>
                    <span class="badge bg-warning text-dark">@Model.PendingCourses.Count khóa</span>
                </div>
                <p class="text-muted small mb-3">
                    <i class="bi bi-info-circle"></i> Các khóa học dưới đây đang chờ quản trị viên phê duyệt. Sau khi được duyệt, bạn sẽ có thể quản lý và xem học viên.
                </p>
                <div class="row">
                    @foreach (var course in Model.PendingCourses)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            @await Html.PartialAsync("_CourseCard", course)
                        </div>
                    }
                </div>
            </div>
        }

        @* Khóa đã xuất bản *@
        @if (hasPublished)
        {
            <div class="mt-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h4 class="text-success mb-0">
                        <i class="bi bi-check-circle"></i> Khóa đã xuất bản
                    </h4>
                    <span class="badge bg-success">@Model.PublishedCourses.Count khóa</span>
                </div>
                <div class="row">
                    @foreach (var course in Model.PublishedCourses)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            @await Html.PartialAsync("_CourseCard", course)
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <script>
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
