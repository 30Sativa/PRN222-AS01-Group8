@model OnlineLearningPlatform.Services.DTO.Response.Teacher.QuizDetailDto

@{
    ViewData["Title"] = "Xem Quiz";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0"><i class="fas fa-question-circle me-2"></i>@Model.Title</h4>
                    <small>Bài học: @Model.LessonTitle</small>
                </div>
                <div>
                    <a asp-action="EditQuiz" asp-route-id="@Model.QuizId" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-2"></i>Sửa Quiz
                    </a>
                    <a asp-action="ManageSections" asp-route-id="@Model.CourseId" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Questions == null || !Model.Questions.Any())
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>Quiz này chưa có câu hỏi nào.
                </div>
            }
            else
            {
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    var question = Model.Questions[i];
                    <div class="card mb-3 border-primary">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <span class="badge bg-primary me-2">Câu @(i + 1)</span>
                                @question.Content
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                @foreach (var answer in question.Answers)
                                {
                                    <div class="list-group-item @(answer.IsCorrect ? "list-group-item-success" : "")">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>@answer.UserAnswer</span>
                                            @if (answer.IsCorrect)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Đáp án đúng
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
