@model IEnumerable<OnlineLearningPlatform.Models.Entities.QuizAttempt>
@{
    ViewData["Title"] = "Lịch sử làm bài";
    var attempts = Model.ToList();
    var totalAttempts = attempts.Count;
    var passedCount = attempts.Count(a => a.Score >= 5);
    var averageScore = totalAttempts > 0 ? (double)attempts.Average(a => a.Score) : 0.0;
}

<link rel="stylesheet" href="~/css/Quiz/quiz.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />

<div class="history-container">
    <!-- Header with Stats -->
    <div class="history-header">
        <h2><i class="bi bi-clock-history me-2"></i>Lịch sử làm bài</h2>
        <p>Theo dõi tiến trình học tập của bạn</p>

        @if (totalAttempts > 0)
        {
            <div class="history-stats">
                <div class="stat-item">
                    <div class="stat-value">@totalAttempts</div>
                    <div class="stat-label">Tổng bài làm</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@passedCount</div>
                    <div class="stat-label">Đã đạt</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@(averageScore.ToString("F1"))</div>
                    <div class="stat-label">Điểm TB</div>
                </div>
            </div>
        }
    </div>

    <!-- History Cards -->
    @if (totalAttempts > 0)
    {
        <div class="history-cards">
            @foreach (var item in attempts.OrderByDescending(a => a.AttemptedAt))
            {
                var isPassed = item.Score >= 5;
                <div class="history-card @(isPassed ? "passed" : "failed")">
                    <div class="history-card-icon">
                        <i class="bi @(isPassed ? "bi-check-circle-fill" : "bi-x-circle-fill")"></i>
                    </div>

                    <div class="history-card-content">
                        <h4 class="history-card-title">@item.Quiz.Title</h4>
                        <div class="history-card-meta">
                            <span>
                                <i class="bi bi-calendar3"></i>
                                @item.AttemptedAt.ToString("dd/MM/yyyy")
                            </span>
                            <span>
                                <i class="bi bi-clock"></i>
                                @item.AttemptedAt.ToString("HH:mm")
                            </span>
                        </div>
                    </div>

                    <div class="history-card-score">
                        <div class="score-circle">@item.Score</div>
                        <div class="score-label">điểm</div>
                    </div>

                    <div class="history-card-action">
                        <a asp-action="AttemptDetail" asp-route-id="@item.AttemptId" class="btn-detail">
                            <i class="bi bi-eye"></i>
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-journal-x"></i>
            </div>
            <h3>Chưa có bài làm nào</h3>
            <p>Bạn chưa thực hiện bài kiểm tra nào. Hãy bắt đầu học và làm quiz ngay!</p>
            <a href="/Student/Index" class="btn-primary mt-3" style="display: inline-flex; align-items: center; gap: 0.5rem;">
                <i class="bi bi-house"></i>
                Về trang chủ
            </a>
        </div>
    }

    <!-- Back Button -->
    <div class="back-btn-wrapper">
        <a href="/Student/Index" class="btn-back">
            <i class="bi bi-arrow-left"></i>
            Quay lại trang chủ
        </a>
    </div>
</div>
