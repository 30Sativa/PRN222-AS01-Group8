            }

        .lesson-info-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .lesson-actions-right {
            display: flex;
            align-items: center;
            gap: 8px; /* Kho·∫£ng c√°ch gi·ªØa n√∫t Xem v√† L√†m Quiz */
        }

        /* Style cho n√∫t L√†m Quiz m√†u v√†ng */
        .btn-quiz-custom {
