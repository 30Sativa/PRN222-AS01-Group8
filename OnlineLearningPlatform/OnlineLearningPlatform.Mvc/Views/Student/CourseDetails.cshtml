}
else
{
    <div class="course-details-container">
        <!-- Course Header -->
        <div class="course-header-section">
            <div class="course-header-content">
                <h1>@Model.Course.Title</h1>
                <div class="course-meta">
                    <span class="teacher">Gi·∫£ng vi√™n: @Model.Course.TeacherName</span>
                    @if (!string.IsNullOrEmpty(Model.Course.CategoryName))
                    {
                        <span class="category">Danh m·ª•c: @Model.Course.CategoryName</span>
                    }
                    <span class="price">
                        @if (Model.Course.Price == 0)
                        {
                            <span class="price-free">Mi·ªÖn ph√≠</span>
                        }
                        else
                        {
                            <span>@Model.Course.Price.ToString("N0") VNƒê</span>
                        }
                    </span>
                </div>
                @if (Model.Course.IsEnrolled)
                {
                    <span class="badge enrolled-badge">ƒê√£ ƒëƒÉng k√Ω</span>
                }
            </div>
        </div>

        <!-- Course Description -->
        <div class="course-description-section">
            <h2>M√¥ t·∫£ kh√≥a h·ªçc</h2>
            <p>@Model.Course.Description</p>
        </div>

        <!-- Course Content (Sections & Lessons) -->
        <div class="course-content-section">
            <h2>N·ªôi dung kh√≥a h·ªçc</h2>
            @if (Model.Course.Sections == null || !Model.Course.Sections.Any())
            {
                <p class="no-content">Kh√≥a h·ªçc ch∆∞a c√≥ n·ªôi dung.</p>
            }
            else
            {
                <div class="sections-list">
                    @foreach (var section in Model.Course.Sections)
                    {
                        <div class="section-card @(Model.Course.IsEnrolled ? "" : "locked")">
                            <div class="section-header @(Model.Course.IsEnrolled ? "" : "locked")"
                                 @if (Model.Course.IsEnrolled)
                                 {
                                                     <text> onclick="toggleSection(@(section.SectionId))" </text>
                                             }
            >
                                            <h3>@(section.Title)</h3>
                                            <div class="section-header-right">
                                                <span class="lesson-count">@(section.Lessons.Count) b√†i h·ªçc</span>
                                                @if (Model.Course.IsEnrolled)
                                                {
                                                        <span class="section-toggle" id="toggle-@(section.SectionId)">‚ñº</span>
                                                }
                                                else
                                                {
                                                        <span class="lock-icon">üîí</span>
                                                }
                                            </div>
                                        </div>

                            @if (Model.Course.IsEnrolled)
                            {
                                <div class="section-content" id="content-@(section.SectionId)">
                                    @if (section.Lessons != null && section.Lessons.Any())
                                    {
                                        <ul class="lessons-list" style="list-style: none; padding: 0;">
                                            @foreach (var lesson in section.Lessons)
                                            {
                                                // T·ª∞ ƒê·ªòNG KI·ªÇM TRA XEM B√ÄI H·ªåC C√ì QUIZ KH√îNG
                                                var hasQuiz = _db.Quizzes.Any(q => q.LessonId == lesson.LessonId);

                                                <li class="lesson-item">
                                                    <!-- B√äN TR√ÅI: Icon v√† Ti√™u ƒë·ªÅ -->
                                                    <div class="lesson-info-left">
                                                        <span class="lesson-icon">
                                                            @if (lesson.LessonType?.ToLower() == "video")
                                                            {
                                                                <span>‚ñ∂</span>
                                                            }
                                                            else if (lesson.LessonType?.ToLower() == "reading")
                                                            {

                                                                <span>üìÑ</span>
                                                            }
                                                            else if (lesson.LessonType?.ToLower() == "quiz")
                                                            {

                                                                <span>‚ùì</span>
                                                            }
                                                            else
                                                            {

                                                                <span>üìù</span>
                                                            }
                                                        </span>
                                                        <span class="lesson-title">@lesson.Title</span>
                                                    </div>

                                                    <!-- B√äN PH·∫¢I: C√°c n√∫t h√†nh ƒë·ªông (Xem v√† L√†m Quiz) -->
                                                    <div class="lesson-actions-right">
                                                        <a asp-action="WatchLesson" asp-route-lessonId="@lesson.LessonId" class="btn-watch">
                                                            Xem
                                                        </a>

                                                        @if (hasQuiz)
                                                        {
                                                            <a asp-controller="Quiz" asp-action="TakeByLesson" asp-route-lessonId="@lesson.LessonId"
                                                               class="btn-quiz-custom">
                                                                L√†m Quiz
                                                            </a>
                                                        }
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Action Buttons -->
        <div class="course-actions">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-error">
                    @TempData["ErrorMessage"]
                </div>
            }
            <div class="action-buttons-group">
                @if (Model.CanEnroll)
                {
                    <form asp-action="Enroll" asp-route-courseId="@Model.Course.CourseId" method="post" class="enroll-form">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn-enroll">ƒêƒÉng k√Ω kh√≥a h·ªçc</button>
                    </form>
                }
                <a asp-action="Index" class="btn-back">Quay l·∫°i danh s√°ch</a>
            </div>
        </div>
    </div>
}

<script>
    function toggleSection(sectionId) {
        const content = document.getElementById('content-' + sectionId);
        const toggle = document.getElementById('toggle-' + sectionId);

        if (content.classList.contains('active')) {
            content.classList.remove('active');
            toggle.textContent = '‚ñº';
        } else {
            content.classList.add('active');
            toggle.textContent = '‚ñ≤';
        }
    }
</script>