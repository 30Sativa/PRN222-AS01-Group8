@model OnlineLearningPlatform.Mvc.Models.CourseListViewModel
@{
    ViewData["Title"] = "Danh sách khóa học";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Student/courses.css" />
}

<div class="courses-container">
    <div class="courses-header">
        <h1>Danh sách khóa học</h1>
    </div>

    <!-- Search Form -->
    <div class="mb-4">
        <form method="get" asp-action="Index">
            <div class="input-group">
                <input type="text" 
                       name="searchString" 
                       value="@ViewData["CurrentFilter"]" 
                       class="form-control" 
                       placeholder="Tìm kiếm khóa học theo tên hoặc mô tả..." 
                       aria-label="Tìm kiếm khóa học">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"] as string))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                }
            </div>
        </form>
    </div>

    @if (Model.Courses == null || !Model.Courses.Any())
    {
        <div class="no-courses">
            <p>Hiện tại chưa có khóa học nào.</p>
        </div>
    }
    else
    {
        <div class="courses-grid">
            @foreach (var course in Model.Courses)
            {
                <div class="course-card">
                    <div class="course-header">
                        <h3 class="course-title">@course.Title</h3>
                        @if (course.IsEnrolled)
                        {
                            <span class="badge enrolled">Đã đăng ký</span>
                        }
                    </div>
                    
                    <div class="course-body">
                        <div class="course-info">
                            <div class="info-item">
                                <strong>Giảng viên:</strong> @course.TeacherName
                            </div>
                            @if (!string.IsNullOrEmpty(course.CategoryName))
                            {
                                <div class="info-item">
                                    <strong>Danh mục:</strong> @course.CategoryName
                                </div>
                            }
                            <div class="info-item">
                                <strong>Giá:</strong> 
                                @if (course.Price == 0)
                                {
                                    <span class="price-free">Miễn phí</span>
                                }
                                else
                                {
                                    <span class="price">@course.Price.ToString("N0") VNĐ</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="course-footer">
                        <a asp-action="CourseDetails" asp-route-id="@course.CourseId" class="btn-view">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            }
        </div>
    }
</div>
