@model OnlineLearningPlatform.Mvc.Models.ProfileViewModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Profile/profile.css" />
}

<div class="profile-container">
    <div class="profile-sidebar">
        <div class="user-summary">
            <div class="avatar">
                @{
                    var initials = !string.IsNullOrEmpty(Model.FullName) 
                        ? string.Join("", Model.FullName.Split(' ').Select(n => n[0]).Take(2)).ToUpper()
                        : "U";
                }
                <span class="avatar-text">@initials</span>
            </div>
            <h3 class="user-name">@Model.FullName</h3>
            <p class="user-email">@Model.Email</p>
            <p class="user-id">ID: @Model.UserId</p>
            <div class="user-stats">
                <div class="stat-item">
                    <span class="stat-value">@Model.CourseCount</span>
                    <span class="stat-label">Khóa học</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value">@Model.ArticleCount</span>
                    <span class="stat-label">Bài viết</span>
                </div>
            </div>
        </div>
        <nav class="profile-nav">
            <a asp-action="Index" class="nav-link active">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                    <circle cx="12" cy="7" r="4"></circle>
                </svg>
                Thông tin cá nhân
            </a>
            <a href="#" class="nav-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                Khóa đang học
            </a>
            <a href="#" class="nav-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
                Khóa học yêu thích
            </a>
            <a href="#" class="nav-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                </svg>
                Đổi mật khẩu
            </a>
        </nav>
    </div>

    <div class="profile-content">
        <div class="profile-card">
            <h2 class="profile-title">Thông tin cá nhân</h2>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-error">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="Update" method="post" class="profile-form">
                @Html.AntiForgeryToken()
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                        <small class="form-text">Email không thể thay đổi</small>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-actions">
                    <button type="submit" class="btn-save">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                            <polyline points="17 21 17 13 7 13 7 21"></polyline>
                            <polyline points="7 3 7 8 15 8"></polyline>
                        </svg>
                        Lưu thay đổi
                    </button>
                    <a href="#" class="btn-cancel" onclick="history.back(); return false;">Hủy bỏ</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
